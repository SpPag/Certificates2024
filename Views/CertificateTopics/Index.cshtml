@model IEnumerable<Certificates2024.Models.CertificateTopic>
@{
    ViewBag.Title = "Topics";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Topics</h1>
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-outline-dark">Create New</a>
    </p>
}
<form class="form-inline my-2 my-lg-0 d-flex justify-content-start" asp-controller="CertificateTopics" asp-action="Filter" style="padding-right: 25px;">
    <input name="searchString" type="text" class="form-control me-2" placeholder="Filter Topics.." aria-describedby="button-addon2" style="width: 250px;">
    <button class="btn btn-secondary btn-sm" type="submit"><i class="bi bi-search"></i> Search</button>
</form>
<br />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4 d-flex align-items-stretch">
            <div class="card border-dark" style="max-width: 18rem;">
                <div class="card-header">@Html.DisplayFor(modelItem => item.TopicName)</div>
                <div class="card-body text-dark">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Price)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                </div>
                <div class="card-footer">

                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Details</a>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Delete</a>
                    }

                    @if (User.Identity.IsAuthenticated && User.IsInRole("User"))
                    {
                        <a asp-controller="CandidateCertificates" asp-action="Create" asp-route-topicId="@item.Id" class="btn btn-secondary btn-sm">Book Now</a>
                    }
                </div>
            </div>
        </div>
    }
</div>
