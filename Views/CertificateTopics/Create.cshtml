@model Certificates2024.Models.CertificateTopic
@{
    ViewBag.Title = "Create Topic";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h4>Certificate Topic</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="TopicName" class="control-label"></label>
                    <select asp-for="TopicName" asp-items="@(ViewData["TopicName"] as IEnumerable<SelectListItem>)" class="form-control">
                        <option value="" selected disabled>Choose Topic...</option>
                    </select>
                    <span asp-validation-for="TopicName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="mt-4 form-group">
                    <input type="submit" value="Create" class="btn btn-outline-dark" />
                </div>
            </form>
        </div>
    </div>
    <div class="mt-4">
        <a asp-action="Index" class="link-body-emphasis">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
