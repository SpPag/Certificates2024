@model Certificates2024.Models.CertificateTopic
@{
    ViewBag.Title = "Certificate Overview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <div>
        <h4>Details of Certificate - @Certificates2024.Data.Static.EnumExtensions.GetDescription(Model.TopicName)</h4>
        <hr />
        <table class="table table-striped table-bordered">
            <tbody>
                <tr>
                    <th> @Html.DisplayNameFor(model => model.TopicName) </th>
                    <td> @Certificates2024.Data.Static.EnumExtensions.GetDescription(Model.TopicName) </td>
                </tr>
                <tr>
                    <th> @Html.DisplayNameFor(model => model.Description) </th>
                    <td> @Html.DisplayFor(model => model.Description) </td>
                </tr>
                <tr>
                    <th> @Html.DisplayNameFor(model => model.Price) </th>
                    <td> @Html.DisplayFor(model => model.Price)€ </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div>
        @if (!User.IsInRole("Admin"))
        {
            <a asp-controller="CandidateCertificates" asp-action="Create" asp-route-topicId="@Model.Id" class="btn btn-success btn-sm">Book Now</a>
        }
    </div>
    <br />
    <div>
        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
        {
            <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.Id">Edit</a>
        }
        <a asp-action="Index" class="link-body-emphasis">Back to List</a>
    </div>
</body>
</html>


