@model IEnumerable<Certificates2024.Models.Question>

@{
    ViewBag.Title = "Questions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class ="display-6" style="margin-bottom: 0.5em">Questions</h1>
<hr/>
<p>
    <a asp-action="Create" class="btn btn-success">Create New Question</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QuestionText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CertificateTopic.TopicName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageSource)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BooleanA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnswerA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BooleanB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnswerB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BooleanC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnswerC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BooleanD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnswerD)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.QuestionText)
                </td>
                <td>
                    @Certificates2024.Data.Static.EnumExtensions.GetDescription(item.CertificateTopic.TopicName)
                </td>
                <td style="max-width: 15vw; word-wrap: break-word;">
                    @Html.DisplayFor(modelItem => item.ImageSource)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BooleanA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnswerA)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BooleanB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnswerB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BooleanC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnswerC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BooleanD)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnswerD)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm mb-2">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm mb-2">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mb-2">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>
