@model IEnumerable<Certificates2024.Models.CandidateCertificate>
@{
    ViewBag.Title = "Certificates";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Certificates</title>
</head>
<body>
    <h1>Certificates</h1>
    <h2>PeepholeCert</h2>
    @if (User.Identity.IsAuthenticated && User.IsInRole("User"))
    {<p>
        <a asp-action="Create" class="btn btn-outline-dark">Book Exam</a>
    </p>}
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Candidate.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Candidate.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CertificateTopic.TopicName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExaminationDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CandidateScore)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaximumScore)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ResultLabel)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Candidate.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Candidate.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CertificateTopic.TopicName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExaminationDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CandidateScore)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaximumScore)
                    </td>
                    <td>
                        @if (item.ExaminationDate > DateTime.Now)
                        {
                            <span> Pending</span>
                        }
                        else
                        {

                            if (item.ResultLabel)

                            {
                                <span>Exam Passed</span>
                            }

                            else

                            {
                                <span>Exam Failed</span>
                            }
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Details</a>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Edit</a>

                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Delete</a>
                        }
                        @if (User.Identity.IsAuthenticated && User.IsInRole("User"))
                        {
                            @if (item.IsTestEligible)
                            {
                                <a asp-controller="Tests" asp-action="Start" asp-route-topicId="@item.CertificateTopic.Id" asp-route-candidateCertificateId="@item.Id" class="btn btn-secondary btn-sm">Start Test</a>
                            }
                            else
                            {
                                <button class="btn btn-secondary btn-sm" disabled>
                                    Not Eligible to Start
                                    <span class="tooltip" title="You need to meet the eligibility criteria to start this test."></span>
                                </button>
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>