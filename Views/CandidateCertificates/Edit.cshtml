@model Certificates2024.Models.CandidateCertificate
@{
    ViewBag.Title = "Edit Certificate";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>Edit Certificate - @Html.DisplayFor(model => model.CertificateTopic.TopicName) of @Html.DisplayFor(model => model.Candidate.FirstName) @Html.DisplayFor(model => model.Candidate.LastName)</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" class="d-flex flex-column gap-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Candidate" class="control-label"></label>
                    <select asp-for="CandidateId" class="form-control" asp-items="ViewBag.CandidateId"></select>
                    <span asp-validation-for="CandidateId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CertificateTopic.TopicName" class="control-label"></label>
                    <select asp-for="CertificateTopicId" class="form-control" asp-items="ViewBag.CertificateTopicId"></select>
                    <span asp-validation-for="CertificateTopicId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ExaminationDate" class="control-label"></label>
                    <input asp-for="ExaminationDate" class="form-control" />
                    <span asp-validation-for="ExaminationDate" class="text-danger"></span>
                </div>
                @* <div class="form-group"> *@
                @*     <label asp-for="CandidateScore" class="control-label"></label> *@
                @*     <input asp-for="CandidateScore" class="form-control" /> *@
                @*     <span asp-validation-for="CandidateScore" class="text-danger"></span> *@
                @* </div> *@
                @* <div class="form-group"> *@
                @*     <label asp-for="MaximumScore" class="control-label"></label> *@
                @*     <input asp-for="MaximumScore" class="form-control" /> *@
                @*     <span asp-validation-for="MaximumScore" class="text-danger"></span> *@
                @* </div> *@
                @* <div class="form-group form-check"> *@
                @*     <label class="form-check-label"> *@
                @*         <input class="form-check-input" asp-for="ResultLabel" /> @Html.DisplayNameFor(model => model.ResultLabel) *@
                @*     </label> *@
                @* </div> *@
                <div class="mt-4 form-group">
                    <input type="submit" value="Save Changes" class="btn btn-success shadow" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="link-body-emphasis">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>