@model Certificates2024.Models.CandidateCertificate
@{
    ViewBag.Title = "Exam Details";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <div>
        <h4>Exam Overview</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Candidate.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Candidate.Id)
            </dd>
            <dt class="col-sm-2">
                Full Name
            </dt>
            <dd class="col-sm-10">
                @($"{Model.Candidate.FirstName} {Model.Candidate.LastName}")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CertificateTopic)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CertificateTopic.TopicName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ExaminationDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ExaminationDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CandidateScore)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CandidateScore)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MaximumScore)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MaximumScore)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ResultLabel)
            </dt>
            <dd class="col-sm-10">
                @(Model.ExaminationDate > DateTime.Now ? "Pending"
                    : Model.ResultLabel ? "Exam Passed" : "Exam Failed")
            </dd>
        </dl>
    </div>
    <div>
        @if (User.Identity.IsAuthenticated && User.IsInRole("User"))
        {
            @if (Model.IsTestEligible)
            {
                <a asp-controller="Tests" asp-action="Start" asp-route-topicId="@Model.CertificateTopic.Id" asp-route-candidateCertificateId="@Model.Id" class="btn btn-secondary btn-sm">Start Test</a>
            }
            else
            {
                <button class="btn btn-secondary btn-sm" disabled>
                    Not Eligible to Start
                    <span class="tooltip" title="You need to meet the eligibility criteria to start this test."></span>
                </button>
            }
        }
    </div>
    <br />
    <div>
        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
        {
            <a asp-action="Edit" class="link-body-emphasis" asp-route-id="@Model?.Id">Edit</a>
        }
        <a asp-action="Index" class="link-body-emphasis">Back to List</a>
    </div>
</body>
</html>