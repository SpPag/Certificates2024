@{
    ViewBag.Title = "Certificate";
    Layout = "";
}
@model Certificates2024.Models.CandidateCertificate

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Certificate of Completion</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/certificate.css">
</head>

<body>
    <div class="container pm-certificate-container">
      <div class="outer-border"></div>
      <div class="inner-border"></div>
      
      <div class="pm-certificate-border col-xs-12 background-image">
        <div class="row pm-certificate-header">
          <div class="pm-certificate-title roboto col-xs-12 text-center">
            <h2 class="spacing">CodeInProgress Academy</h2>
            <h3>Certificate of Completion</h3>
          </div>
        </div>

        <div class="row pm-certificate-body">
          
          <div class="pm-certificate-block">
              <div class="col-xs-12">
                <div class="row">
                  <div class="col-xs-2"><!-- LEAVE EMPTY --></div>
                  <div class="pm-certificate-name underline margin-0 col-xs-8 text-center">
                    <span class="pm-name-text cursive">@Model.Candidate.FirstName @Model.Candidate.LastName</span>
                  </div>
                  <div class="col-xs-2"><!-- LEAVE EMPTY --></div>
                </div>
              </div>          

              <div class="col-xs-12">
                <div class="row">
                  <div class="col-xs-2"><!-- LEAVE EMPTY --></div>
                  <div class="pm-earned col-xs-8 text-center">
                    <span class="pm-earned-text padding-0 block roboto">has achieved</span>
                    <span class="pm-credits-text block bold sans">@((double?)Model.CandidateScore / (double?)Model.MaximumScore * 100 + "%")</span>
                  </div>
                  <div class="col-xs-2"><!-- LEAVE EMPTY --></div>
                </div>
              </div>

              <div class="col-xs-12">
                <div class="row">
                  <div class="col-xs-2"><!-- LEAVE EMPTY --></div>
                            <div class="pm-earned-text block col-xs-8 roboto text-center">while completing the training course entitled</div>
                </div>
              </div>

              <div class="col-xs-12">
                <div class="row">
                  <div class="col-xs-2"><!-- LEAVE EMPTY --></div>
                  <div class="pm-course-title underline col-xs-8 text-center">
                    <span class="pm-credits-text block bold sans">@Model.CertificateTopic.TopicName</span>
                  </div>
                  <div class="col-xs-2"><!-- LEAVE EMPTY --></div>
                </div>
              </div>
          </div>       

          <div class="col-xs-12">
            <div class="row">
              <div class="pm-certificate-footer">
                  <div class="col-xs-4 pm-certified col-xs-4 text-center">
                    <span class="pm-credits-text block sans">CodeInProgress Academy</span>
                    <span class="pm-empty-space block underline"></span>
                    <span class="bold block">William Thacher Instructional Specialist</span>
                  </div>
                  <div class="col-xs-4 pm-certified col-xs-4 text-center">
                    <img src="/img/badge.png" alt="Badge" class="pm-badge-image">
                  </div>
                  <div class="col-xs-4 pm-certified col-xs-4 text-center">
                    <span class="pm-credits-text block sans">Date Completed</span>
                    <span class="pm-empty-space block underline">@Model.ExaminationDate.ToString("MMMM dd, yyyy")</span>
                    <span class="bold block">DOB: @Model.Candidate.BirthDate.ToString("MMMM dd, yyyy")</span>
                    <span class="bold block">ID: @Model.Candidate.PhotoIdNumber</span>
                  </div>
              </div>
            </div>
          </div>
  
        </div>
      </div>
    </div>
</body>
</html>
