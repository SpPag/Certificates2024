@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Delete Candidate</h4>

<div>
    <hr />
    <table class="table table-striped table-bordered mt-3">
        <tbody>
