@model IEnumerable<Certificates2024.Models.Candidate>
@using Microsoft.AspNetCore.Identity

@{
    ViewBag.Title = "Candidates";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (TempData["DeleteMessage"] != null)
    {
        <script>
            alert('@TempData["DeleteMessage"]');
        </script>
    }
}

<h1>Candidates</h1>

@* <p> *@
@*     <a asp-action="Create" class="btn btn-outline-dark">Create New</a> *@
@* </p> *@

@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{﻿
    <a class="btn btn-primary me-3" asp-controller="Account" asp-action="Register">
        <i class="bi bi-person-plus">New Candidate</i>
    </a>
    <br />
    <br />
}
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoIdNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhotoIdNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Delete</a>
                </td>
        </tr>
}
    </tbody>
</table>
