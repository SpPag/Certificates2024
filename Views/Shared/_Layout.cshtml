<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - CodeInProgress Academy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Certificates2024.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100" style="background-image: url('https://localhost:7058//img/layout.jpg'); background-size: auto; background-repeat: repeat; background-position: center;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom  box-shadow mb-3 fixed-top top:0;">
            <div class="text-bg-dark p-3">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">CodeInProgress Academy</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="CertificateTopics" asp-action="Index">Certificates</a>
                        </li>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("User"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="CandidateCertificates" asp-action="Index">My Exams</a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="CandidateCertificates" asp-action="Index">Exams</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Candidates" asp-action="Index">Candidates</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Questions" asp-action="Index">Questions</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Users">Users</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <partial name="_Identity.cshtml" />
        </nav>
    </header>
    <br />

    <br />

    <br />

    <br />

    <br />

    <br />
    <div class="container content flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted mt-auto p-3">
        <div class="container">
            &copy; 2024 - CodeInProgress Academy
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> <!--BOOTSTRAP JS! -->
    @await RenderSectionAsync("Scripts", required: false)

    @if (TempData["DeleteMessage"] != null)
    {
        <div class="toast-container position-fixed top-50 start-50 translate-middle-x p-3" style="z-index: 1055;">
            <div class="toast align-items-center text-bg-danger border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-body text-center">
                    <p>@TempData["DeleteMessage"]</p>
                    <button type="button" class="btn btn-primary mt-2" data-bs-dismiss="toast" aria-label="Close">OK</button>
                </div>
            </div>
        </div>
    }
</body>
</html>
